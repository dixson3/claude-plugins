{
  "name": "chronicler",
  "version": "1.0.0",
  "description": "Context persistence across Claude sessions using beads and diary generation",
  "author": {
    "name": "James Dixson",
    "email": "dixson3@gmail.com"
  },
  "license": "MIT",
  "skills": [
    "skills/init/SKILL.md",
    "skills/capture/SKILL.md",
    "skills/recall/SKILL.md",
    "skills/diary/SKILL.md",
    "skills/disable/SKILL.md"
  ],
  "agents": [
    "agents/chronicler_recall.md",
    "agents/chronicler_diary.md"
  ],
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash(git push*)",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/pre-push-diary.sh"
          }
        ]
      }
    ]
  }
}
